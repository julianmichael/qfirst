  <!--   <encoder> -->
  <!--     <pattern>%d{HH:mm:ss.SSS} [%-5level] %logger{35} - %msg%n</pattern> -->
  <!--   </encoder> -->
  <!-- </appender> -->

  <!-- <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender"> -->
  <!--   <appender-ref ref="FILE" /> -->
  <!-- </appender> -->

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
